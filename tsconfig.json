{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "strict": true,
    "target": "ES2020",
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declarationDir": "./dist/types",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@errors": [
        "src/errors/index.ts"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
