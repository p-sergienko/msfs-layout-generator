{
  "name": "msfs-layout-generator",
  "version": "0.2.2",
  "description": "Generate layout.json for MSFS community packages",
  "repository": {
    "type": "git",
    "url": "https://github.com/p-sergienko/msfs-layout-generator.git"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && tsc-alias",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "cli:test": "bun src/cli.ts --help"
  },
  "bin": {
    "msfs-layout": "dist/cli.js",
    "msfs-layout-generator": "dist/cli.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsc-alias": "^1.8.16",
    "@types/node": "^25.0.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "glob": "^13.0.0"
  }
}
